{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/dealer-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "tsConfigPath": "apps/dealer-service/tsconfig.app.json",
    "webpack": false
  },
  "monorepo": true,
  "root": "apps/dealer-service",
  "projects": {
    "dealer-service": {
      "type": "application",
      "root": "apps/dealer-service",
      "entryFile": "main",
      "sourceRoot": "apps/dealer-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/dealer-service/tsconfig.app.json"
      }
    },
    "kafka-consumer-example": {
      "type": "application",
      "root": "apps/kafka-consumer-example",
      "entryFile": "main",
      "sourceRoot": "apps/kafka-consumer-example/src",
      "compilerOptions": {
        "tsConfigPath": "apps/kafka-consumer-example/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "service-utilities": {
      "type": "library",
      "root": "libs/service-utilities",
      "entryFile": "index",
      "sourceRoot": "libs/service-utilities/src",
      "compilerOptions": {
        "tsConfigPath": "libs/service-utilities/tsconfig.lib.json"
      }
    }
  }
}